{
	"name": "df_SCD2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_Scd_File",
						"type": "DatasetReference"
					},
					"name": "sourceinsertscd2"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_dynamicTable",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumnIsActive"
				}
			],
			"scriptLines": [
				"source(output(",
				"          cid as string,",
				"          ConainerName as string,",
				"          POL as string,",
				"          POD as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceinsertscd2",
				"sourceinsertscd2 derive(isActive = 1) ~> derivedColumnIsActive",
				"derivedColumnIsActive sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     recreate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}