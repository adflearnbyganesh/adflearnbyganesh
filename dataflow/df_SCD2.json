{
	"name": "df_SCD2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_Scd_File",
						"type": "DatasetReference"
					},
					"name": "sourceinsertscd2"
				},
				{
					"dataset": {
						"referenceName": "ds_dynamicTable",
						"type": "DatasetReference"
					},
					"name": "sourcetable"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_dynamicTable",
						"type": "DatasetReference"
					},
					"name": "sinkTableSCD2Insert"
				},
				{
					"dataset": {
						"referenceName": "ds_dynamicTable",
						"type": "DatasetReference"
					},
					"name": "sinkTableSCD2Update"
				}
			],
			"transformations": [
				{
					"name": "derivedColumnIsActive"
				},
				{
					"name": "lookupFileTable"
				},
				{
					"name": "derivedColumnisActiveTable"
				},
				{
					"name": "alterRowforUpdate"
				}
			],
			"scriptLines": [
				"source(output(",
				"          cid as integer,",
				"          ConainerName as string,",
				"          POL as string,",
				"          POD as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceinsertscd2",
				"source(output(",
				"          cid as integer,",
				"          ConainerName as string,",
				"          POL as string,",
				"          POD as string,",
				"          isActive as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> sourcetable",
				"sourceinsertscd2 derive(isActive = 1) ~> derivedColumnIsActive",
				"sourceinsertscd2, sourcetable lookup(sourceinsertscd2@cid == sourcetable@cid,",
				"     multiple: true,",
				"     broadcast: 'auto')~> lookupFileTable",
				"lookupFileTable derive(isActivewithZero = 0) ~> derivedColumnisActiveTable",
				"derivedColumnisActiveTable alterRow(updateIf(1==1)) ~> alterRowforUpdate",
				"derivedColumnIsActive sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     recreate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     saveOrder: 2,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sinkTableSCD2Insert",
				"alterRowforUpdate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:false,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['cid'],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     saveOrder: 1,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          cid = sourceinsertscd2@cid,",
				"          ConainerName = sourceinsertscd2@ConainerName,",
				"          POL = sourceinsertscd2@POL,",
				"          POD = sourceinsertscd2@POD,",
				"          isActive = isActivewithZero",
				"     )) ~> sinkTableSCD2Update"
			]
		}
	}
}